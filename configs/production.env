# Production Environment Variables for WinCloud
# CloudFlare SSL Domain Configuration

# Domain Configuration
DOMAIN=wincloud.app
API_DOMAIN=api.wincloud.app
VPS_DOMAIN=vps.wincloud.app
HOME_DOMAIN=wincloud.app

# Port Configuration
HOME_PORT=7000
API_PORT=5000
VPS_PORT=5173

# SSL/Security
ENFORCE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/wincloud.app.pem
SSL_KEY_PATH=/etc/ssl/private/wincloud.app.key

# CORS Origins (Production)
CORS_ORIGINS=["https://wincloud.app","https://www.wincloud.app","https://vps.wincloud.app"]

# Database
DATABASE_URL=postgresql://wincloud:wincloud123@localhost:5432/wincloud

# Security
SECRET_KEY=your-super-secret-production-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_URL=redis://localhost:6379

# DigitalOcean
DO_TOKEN_ENCRYPTION=enabled
SECURE_TOKEN_SERVICE=enabled

# CloudFlare
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token

# OAuth Settings
GITHUB_CLIENT_ID=Ov23liL6OdNV2AswPsZs
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Environment for OAuth URL detection
ENVIRONMENT=production

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ENABLED=true

# Performance
RATE_LIMITING=enabled
CACHE_TTL=3600
