# OAuth Configuration for WinCloud Builder
# Real OAuth credentials for GitHub, Google, and Facebook integration

# GitHub OAuth App
GITHUB_CLIENT_ID=Ov23liL6OdNV2AswPsZs
GITHUB_CLIENT_SECRET=your-github-client-secret-from-app-settings
GITHUB_REDIRECT_URI=http://localhost:5000/api/v1/auth/github/callback

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/v1/auth/google/callback

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:5000/api/v1/auth/facebook/callback

# Production Facebook OAuth URLs
FACEBOOK_REDIRECT_URI_PROD=https://api.wincloud.app/api/v1/auth/facebook/callback

# OAuth State Secret (for CSRF protection)
OAUTH_STATE_SECRET=super-secret-oauth-state-key-change-in-production

# Production URLs (automatically used when ENVIRONMENT=production)
# Development URLs (default):
#   - http://localhost:5000/api/v1/auth/{provider}/callback
# Production URLs (when deployed):
#   - https://api.wincloud.app/api/v1/auth/{provider}/callback

# Environment detection for OAuth URLs
ENVIRONMENT=development
